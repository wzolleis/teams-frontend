{
  "extends": [
    "tslint-react"
  ],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2016"
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "rules": {
    "jsx-no-lambda": false,
    "jsx-alignment": false
  }
}
